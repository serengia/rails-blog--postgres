<main class="home">
<div class="users-list-wrapper row">
<h1 class="heading">Users list page</h1>
<% @users.each do |u|%>
<div class="user-card">
    <div class="image-wrapper">
        <img src="<%= asset_path("user-placeholder.png") %>" class="img"  alt="<%= u.name%>">
    </div>
    <div class="content">
        <h2><%= link_to u.name, "/users/#{u.id}"%></h2>
        <p>No of Posts: <%= u.posts_counter%></p>
    </div>
</div>
<% end %>
</div>
</main>

 
